<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Contact</h2>
            <% if (!contact) { %>
                <div class="alert alert-danger" role="alert">
                    Data contact yang Anda cari tidak ditemukan. <br>
                    <a href="/contact" class="alert-link">&laquo; Kembali ke daftar contact</a>
                </div>
            <% } else { %>
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                      <h5 class="card-title"><%= contact.nama %> </h5>
                      <h6 class="card-subtitle mb-2 text-muted"><%= contact.nohp %></h6>
                      <p class="card-text"><%= contact.email %></p>
                      <a href="/contact/edit/<%= contact.nama %> " class="btn btn-info badge">Edit</a>
                      <!-- <a href="/contact/delete/<%= contact.nama %> " class="btn btn-danger badge" onclick="confirm('Yakin ingin hapus?');">Hapus</a> -->
                      <form method="POST" action="/contact?_method=DELETE" class="d-inline">
                        <input type="hidden" name="nama" value="<%= contact.nama %>">
                        <button type="submit" class="btn btn-danger badge" onclick="return confirm('Anda Yakin ingin menghapus data ini?')">Hapus</button>
                      </form>
                    
                      <a href="/contact" class="card-link d-block mt-3">&laquo; Kembali ke daftar contact</a>
                      </div>
                  </div>
            <% } %> 
            
        </div>
    </div>
</div>